<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_background"
    tools:context=".ui.theme.special_events_1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="414dp"
        android:layout_height="213dp"
        android:background="@drawable/top_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/backbtn3"
            android:layout_width="54dp"
            android:layout_height="42dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="16dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="68dp"
            android:fontFamily="serif"
            android:text="@string/special_events1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="408dp"
        android:layout_height="671dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" >

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="351dp"
            android:layout_height="369dp"
            android:layout_marginStart="30dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.124">

            <EditText
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/white_background"
                android:backgroundTint="@color/Normal_dark"
                android:drawableEnd="@android:drawable/ic_menu_edit"
                android:fontFamily="sans-serif-light"
                android:text="@string/birthday_party_2024_06_13"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="34sp" />


            <EditText
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/white_background"
                android:backgroundTint="@color/Normal_dark"
                android:drawableEnd="@android:drawable/ic_menu_edit"
                android:fontFamily="sans-serif-light"
                android:text="@string/exam_start_date_2024_05_03"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:textSize="34sp" />

            <EditText
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/white_background"
                android:backgroundTint="@color/Normal_dark"
                android:drawableEnd="@android:drawable/ic_menu_edit"
                android:fontFamily="sans-serif-light"
                android:text="@string/brother_s_wedding_day_2024_08_12"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="302dp"
            android:layout_height="83dp"
            android:layout_marginStart="55dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            app:layout_constraintVertical_bias="0.543">

            <EditText
                android:id="@+id/textView24"
                android:layout_width="302dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/white_background"
                android:backgroundTint="@color/light_accent"
                android:drawableLeft="@drawable/baseline_add_circle_outline_24"
                android:fontFamily="sans-serif-light"
                android:text="@string/add_events"
                android:textAlignment="center"
                android:textColor="@color/black"
                tools:textSize="34sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>